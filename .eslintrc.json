{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["src/interfaces/types.ts"],
    "rules": {
        "no-extra-semi": "off",
        "eol-last": "off",
        "semi":"off",
        "indent": [2, "tab"],
		"no-tabs": "off",
		"quotes": "off" 
    }
}
